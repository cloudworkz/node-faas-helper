{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "types": ["node", "mocha", "chai"],
    "sourceMap": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strict": true,
    "outDir": "dist/",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": ["."],
  "exclude": [
    "./coverage",
    "./node_modules",
    "./dist",
    "./bin",
    "./test/**/*.ts"
  ]
}